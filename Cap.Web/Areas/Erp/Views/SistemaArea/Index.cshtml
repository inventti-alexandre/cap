@model IEnumerable<Cap.Domain.Models.Admin.SistemaArea>

@{
    ViewBag.Title = "Áreas do sistema";
}

<h2>Áreas do sistema</h2>

<p>
    <a href="#" class="area-create">Nova área</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            <a href="#" class="area-edit" data-id="@item.Id">Editar</a> |
            <a href="#" class="area-details" data-id="@item.Id">Detalhes</a> |
            <a href="#" class="area-delete" data-id="@item.Id">Excluir</a>
        </td>
    </tr>
}

</table>

<div class="modal" id="modal">

</div>

@*<script src="~/Scripts/jquery-1.10.2.min.js"></script>*@
<script type="text/javascript">

    $(document).ready(function () {

        $('.area-create').click(function () {
            $('#modal').load('/Erp/SistemaArea/Create', function () {
                $('#modal').modal('show');
            });
        })

        $('.area-edit').click(function () {
            var id = $(this).attr('data-id');
            $('#modal').load('/Erp/SistemaArea/Edit/' + id, function () {
                $("#modal").modal('show');
            });
        })

        $('.area-details').click(function () {
            var id = $(this).attr("data-id");
            $('#modal').load('/Erp/SistemaArea/Details/' + id, function () {
                $('#modal').modal('show');
            });
        });

        $('.area-delete').click(function () {
            var id = $(this).attr('data-id');
            $('#modal').load('/Erp/SistemaArea/Delete/' + id, function () {
                $('#modal').modal('show');
            })
        });

    });
</script>
