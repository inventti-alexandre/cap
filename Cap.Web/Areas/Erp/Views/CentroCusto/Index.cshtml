@model IEnumerable<Cap.Domain.Models.Cap.CentroCusto>

@{
    ViewBag.Title = "Centros de custos";
}

<h2>Centros de custos</h2>

<p>
    @Html.ActionLink("Novo centro de custo", "Create", new { idGrupoCusto = ViewBag.IdGrupoCusto })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

@Html.ActionLink("Voltar", "Index", "GrupoCusto");
