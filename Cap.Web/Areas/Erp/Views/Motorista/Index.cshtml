@model IEnumerable<Cap.Domain.Models.Cap.Motorista>

@{
    ViewBag.Title = "Motoristas";
}

<h2>Motoristas</h2>

<p>
    <a href="#" id="newMotorista">Novo motorista</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UsuarioId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            <a href="#" class="edit-motorista" data-id="@item.Id">Editar</a> |
            <a href="#" class="details-motorista" data-id="@item.Id">Detalhes</a> |
            <a href="#" class="delete-motorista" data-id="@item.Id">Excluir</a>
        </td>
    </tr>
}

</table>

<div class="modal" id="modal">

</div>

<script type="text/javascript">

    $('#newMotorista').click(function () {
        $('#modal').load('/Erp/Motorista/Create', function () {
            $('#modal').modal('show');
        });
    });

    $(".details-motorista").click(function () {
        var id = $(this).attr('data-id');
        $('#modal').load('/Erp/Motorista/Details/' + id, function () {
            $('#modal').modal('show');
        });
    });

    $(".edit-motorista").click(function () {
        var id = $(this).attr('data-id');
        $('#modal').load('/Erp/Motorista/Edit/' + id, function () {
            $('#modal').modal('show');
        });
    });

    $(".delete-motorista").click(function () {
        var id = $(this).attr('data-id');
        $('#modal').load('/Erp/Motorista/Delete/' + id, function () {
            $('#modal').modal('show');
        });
    });

</script>