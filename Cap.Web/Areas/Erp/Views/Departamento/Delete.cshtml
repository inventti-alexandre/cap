@model Cap.Domain.Models.Cap.Departamento

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close close-modal" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">Excluir departamento</h4>
        </div>
        <div class="modal-body">


            <h4 class="text-danger">Confirma a exclusão deste departamento?</h4>

            <div>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Descricao)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Endereco)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Endereco)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Bairro)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Bairro)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Cidade)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Cidade)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.IdEstado)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Estado.UF)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Cep)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Cep)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Cei)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Cei)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Ativo)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Ativo)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.AlteradoPor)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Usuario.Nome)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.AlteradoEm)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.AlteradoEm)
                    </dd>

                </dl>

                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="button" id="del-depto" data-id="@Model.Id" value="Excluir" class="btn btn-danger" />
                    </div>
                }
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default close-modal" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $('#del-depto').click(function () {
        var id = $(this).attr('data-id');
        $.ajax({
            url: '/Erp/Departamento/Delete/',
            type: 'POST',
            data: { 'id': id },
            datatype: 'json',
            success: function (result) {
                if (result.success == true) {
                    $('#modal').modal('hide');
                    location.reload(false);
                } else {
                    $('#modal').html(result);
                }
            },
            error: function (e) {
                $('#modal').html(e.error);
            }
        })
    });

</script>
