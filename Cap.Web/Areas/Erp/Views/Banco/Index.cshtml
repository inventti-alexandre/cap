@model IEnumerable<Cap.Domain.Models.Cap.Banco>

@{
    ViewBag.Title = "Bancos";
}

<h2>Bancos</h2>

<p>
    @Html.ActionLink("Novo banco", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Razao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumFebraban)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Razao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumFebraban)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
