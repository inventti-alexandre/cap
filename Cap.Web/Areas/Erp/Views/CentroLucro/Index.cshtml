@model IEnumerable<Cap.Domain.Models.Cap.CentroLucro>

@{
    ViewBag.Title = "Centros de lucros";
}

<h2>Centros de lucros</h2>

<p>
    @Html.ActionLink("Novo centro de lucro", "Create", new { idGrupoLucro = (int)ViewBag.idGrupoLucro })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdGrupoLucro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GrupoLucro.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

@Html.ActionLink("Voltar", "Index", new { id = ViewBag.IdGrupoLucro })
