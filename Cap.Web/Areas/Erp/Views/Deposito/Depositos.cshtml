@model IEnumerable<Cap.Domain.Models.Cap.Deposito>

<p>
    @Html.ActionLink("Novo favorecido", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Favorecido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdBanco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Agencia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Conta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Poupanca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Favorecido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdBanco)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Agencia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Conta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Poupanca)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id, pesquisa = ViewBag.Pesquisa }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.Id, pesquisa = ViewBag.Pesquisa }) |
            @Html.ActionLink("Excluir", "Delete", new { id = item.Id, pesquisa = ViewBag.Pesquisa })
        </td>
    </tr>
}

</table>
