@model Cap.Domain.Models.Cap.Parcela

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close close-modal" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">Confirma a exclusão desta parcela?</h4>
        </div>
        <div class="modal-body">

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Vencto)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Vencto)
                </dd>

                <dt>
                    @Html.DisplayFor(model => model.IdMoeda) @Html.DisplayNameFor(model => model.Valor)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Valor)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.IdPgto)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Pgto.Descricao)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.NN)
                </dt>

                <dt>
                    @Html.DisplayNameFor(model => model.Observ)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Observ)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Liberado)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Liberado)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.LibMaster)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.LibMaster)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Id)

                <div class="form-actions no-color">
                    <input type="submit" value="Excluir" class="btn btn-danger" />
                </div>
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default close-modal" data-dismiss="modal">Fechar</button>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->