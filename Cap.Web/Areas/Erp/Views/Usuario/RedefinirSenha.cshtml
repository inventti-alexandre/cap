@model Cap.Domain.Models.Admin.Usuario

@{
    ViewBag.Title = "Redefinir Senha";
}

<h2>Redefinir Senha</h2>

<div class="alert alert-warning top20">
    <h4>Atenção</h4>
    A senha de <strong>@Model.Nome</strong> será redefinida. Um email será enviado com a nova senha.<br />Após a redefinição o acesso só será permitido com a nova senha.
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.ValidationSummary(true)

    <div class="form-group">
        <input type="submit" value="Redefinir senha" class="btn btn-danger" />
    </div>
}

<p>
    @Html.ActionLink("Voltar", "Index", "Home")
</p>